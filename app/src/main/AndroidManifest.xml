<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mbn.movil">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:name=".MBNMovilApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.impl.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MBNNoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.impl.RegistrarUsuario"></activity>
        <activity android:name=".view.impl.RegistrarAutoActivity">
        </activity>
        
        <activity android:name=".view.impl.ReservacionesActivity"
            android:label="Reservaciones"/>
        <activity android:name=".view.impl.ViajesActivity" android:label="Viajes"></activity>

        <activity android:name=".view.impl.HomeActivity"
            android:label="@string/bienvenido">
        </activity>
        <activity android:name=".view.impl.ActualizarContrasenaActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.mbn.com.mx"
                    android:pathPrefix="/MBNMovil/cambiarContrasena"
                    android:scheme="http"></data>
            </intent-filter>
        </activity>
        <activity android:name=".view.impl.CambiarContrasenaActivity"></activity>
    </application>

</manifest>