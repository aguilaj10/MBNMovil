<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mbn.movil">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MBNMovilApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.impl.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MBNNoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.impl.HomeActivity"
            android:label="Principal" />
        <activity android:name=".view.impl.ReservacionesActivity"
            android:label="Reservaciones"/>
        <activity android:name=".view.impl.ViajesActivity" android:label="Viajes"></activity>
    </application>

</manifest>